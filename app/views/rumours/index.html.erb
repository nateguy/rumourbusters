<div class="signup_form">
<h2>Listing rumours</h2>

<table>
  <thead>
    <tr>
      <th><h5>Title </h5></th>
      <th><h5>Location </h5></th>
      <th><h5>Controls </h5></th>
    </tr>
  </thead>

  <tbody>
    <% @rumours.each do |rumour| %>
      <tr>
        <td><h4><%= rumour.title %></h4></td>
        <td><h4><%= rumour.location %></h4></td>
        <td><%= link_to 'Show', rumour, class: "btn btn-primary" %></td>
        <% if rumour.witnessed != true || rumour.witness_id == current_user.id %>
        <td><%= link_to 'Witness this Rumour', edit_rumour_path(rumour),  class: "btn btn-primary" %></td>
        <% end %>
        <% if rumour.witness_id == current_user.id %>
        <td><%= link_to 'Undo Witness', disown_rumour_path(rumour), data: { confirm: 'Are you sure?' }, class: "btn btn-primary",method: :put %></td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>
</div>