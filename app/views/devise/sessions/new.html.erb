<div class="signup_form">

  <h2>Sign in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>


    <div class="col-lg-12">
      <div class='form-group'>
      <%= f.email_field :email, placeholder: "E-mail", autofocus: true, class: "input-lg form-control" %>
      </div>
    </div>

    <div class="col-lg-12">
      <div class='form-group'>
        <%= f.password_field :password, :placeholder => "Password", autocomplete: "off", class: "input-lg form-control" %></div>
      </div>


    <% if devise_mapping.rememberable? -%>
    <div class="col-lg-12">
      <div class='form-group'><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
    </div>
    <% end -%>


    <div class="col-lg-12">
      <div class='form-group'><%= f.submit "Sign in", class: "btn btn-primary btn-lg" %></div>
    </div>
    <div class="col-lg-12">
      <div class='form-group'><%= render "devise/shared/links" %></div></div>
  <% end %>

</div>

